{% extends 'base.html.twig' %}

{% block title %}{{ course.title }}{% endblock %}

{% block body %}
<div class="container-fluid p-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">{{ course.title }}</h1>
            <p class="text-muted">Code: <strong>{{ course.code_unique }}</strong></p>
        </div>
        <div>
            <a href="{{ path('app_course_edit', {'id': course.id}) }}" class="btn btn-primary shadow-sm mr-2">
                <i class="fas fa-edit fa-sm text-white-50"></i> Modifier
            </a>
            <a href="{{ path('app_teacher_dashboard') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <!-- Course Info -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Description</h6>
                </div>
                <div class="card-body">
                    <p>{{ course.description }}</p>
                </div>
            </div>

            <!-- Modules Section -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Modules du Cours</h6>
                    <a href="{{ path('app_module_new', {'course_id': course.id}) }}" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus"></i> Ajouter un Module
                    </a>
                </div>
                <div class="card-body">
                    {% if course.modules|length > 0 %}
                        <div class="list-group">
                            {% for module in course.modules %}
                                <div class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">{{ module.title }}</h5>
                                        <small>{{ module.resources|length }} ressources</small>
                                    </div>
                                    <p class="mb-1 text-muted">{{ module.description|slice(0, 100) }}...</p>
                                    <div class="mt-2">
                                        <a href="{{ path('app_module_show', {'id': module.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Voir
                                        </a>
                                        <a href="{{ path('app_module_edit', {'id': module.id}) }}" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-layer-group fa-3x text-gray-300 mb-3"></i>
                            <p class="text-muted">Aucun module pour le moment.</p>
                            <a href="{{ path('app_module_new', {'course_id': course.id}) }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Créer le premier module
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Stats Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Statistiques</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Modules</span>
                            <strong>{{ course.modules|length }}</strong>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Étudiants Inscrits</span>
                            <strong>{{ course.enrollments|length }}</strong>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Créé le</span>
                            <strong>{{ course.createdAt|date('d/m/Y') }}</strong>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Actions Rapides</h6>
                </div>
                <div class="card-body">
                    <a href="{{ path('app_module_new', {'course_id': course.id}) }}" class="btn btn-primary btn-block mb-2">
                        <i class="fas fa-plus"></i> Ajouter un Module
                    </a>
                    <a href="{{ path('app_teacher_course_students', {'id': course.id}) }}" class="btn btn-info btn-block">
                        <i class="fas fa-users"></i> Voir les Étudiants
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.text-gray-300 { color: #dddfeb!important; }
.text-gray-800 { color: #5a5c69!important; }
</style>
{% endblock %}
