{% extends 'base.html.twig' %}

{% block title %}Modifier le cours{% endblock %}

{% block body %}
<main class="main-area">
    <div class="form-page-header">
        <div class="header-breadcrumb">
            <a href="{{ path('app_course_show', {'id': course.id}) }}" class="breadcrumb-link">
                <i class="fas fa-arrow-left"></i> Retour au cours
            </a>
        </div>
        
        <div class="form-title-section">
            <div class="form-icon-wrapper edit">
                <i class="fas fa-edit"></i>
            </div>
            <div>
                <h1>Modifier le cours</h1>
                <p class="form-subtitle">Modifiez les informations de votre cours</p>
            </div>
        </div>
    </div>

    <div class="form-container">
        <div class="form-main-card">
            {{ form_start(form, {'attr': {'class': 'premium-form'}}) }}
                <div class="form-section">
                    <h3 class="form-section-title">
                        <i class="fas fa-info-circle"></i> Informations générales
                    </h3>
                    
                    <div class="form-group">
                        {{ form_label(form.title, 'Titre du cours', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-input', 'placeholder': 'Ex: Introduction à la Programmation Web'}}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-textarea', 'placeholder': 'Décrivez le contenu et les objectifs de votre cours...', 'rows': '5'}}) }}
                        {{ form_errors(form.description) }}
                        <span class="form-help">Une bonne description aide les étudiants à comprendre le contenu du cours</span>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.code_unique, 'Code unique', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.code_unique, {'attr': {'class': 'form-input', 'placeholder': 'Ex: PROG-WEB-2024'}}) }}
                        {{ form_errors(form.code_unique) }}
                        <span class="form-help">Ce code permet d'identifier le cours de manière unique</span>
                    </div>
                </div>

                {{ form_rest(form) }}

                <div class="form-actions">
                    <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn-form-cancel">
                        <i class="fas fa-times"></i> Annuler
                    </a>
                    <button type="submit" class="btn-form-submit">
                        <i class="fas fa-save"></i> Enregistrer les modifications
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</main>
{% endblock %}
