{% extends 'base.html.twig' %}

{% block title %}Modifier - {{ course.title }}{% endblock %}

{% block body %}
<main class="main-area">
    <div class="form-page-header">
        <div class="header-breadcrumb">
            <a href="{{ path('app_course_index') }}" class="breadcrumb-link">
                <i class="fas fa-arrow-left"></i> Retour aux cours
            </a>
        </div>
        
        <div class="form-title-section">
            <div class="form-icon-wrapper edit">
                <i class="fas fa-edit"></i>
            </div>
            <div>
                <h1>Modifier le cours</h1>
                <p class="form-subtitle">Mettez à jour les informations de votre cours</p>
            </div>
        </div>
    </div>

    <div class="form-container">
        <div class="form-main-card">
            {{ form_start(form, {'attr': {'class': 'premium-form'}}) }}
                <div class="form-section">
                    <h3 class="form-section-title">
                        <i class="fas fa-info-circle"></i> Informations générales
                    </h3>
                    
                    <div class="form-group">
                        {{ form_label(form.title, 'Titre du cours', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-input', 'placeholder': 'Ex: Introduction à la Programmation Web'}}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-textarea', 'placeholder': 'Décrivez le contenu et les objectifs de votre cours...', 'rows': '5'}}) }}
                        {{ form_errors(form.description) }}
                        <span class="form-help">Une bonne description aide les étudiants à comprendre le contenu du cours</span>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.code_unique, 'Code unique', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.code_unique, {'attr': {'class': 'form-input', 'placeholder': 'Ex: PROG-WEB-2024'}}) }}
                        {{ form_errors(form.code_unique) }}
                        <span class="form-help">Ce code permet d'identifier le cours de manière unique</span>
                    </div>

                    {% if form.teacher is defined %}
                        <div class="form-group">
                            {{ form_label(form.teacher, 'Enseignant', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.teacher, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.teacher) }}
                        </div>
                    {% endif %}
                </div>

                {{ form_rest(form) }}

                <div class="form-actions">
                    <a href="{{ path('app_course_index') }}" class="btn-form-cancel">
                        <i class="fas fa-times"></i> Annuler
                    </a>
                    <button type="submit" class="btn-form-submit">
                        <i class="fas fa-save"></i> Enregistrer les modifications
                    </button>
                </div>
            {{ form_end(form) }}
        </div>

        <div class="form-sidebar">
            <div class="sidebar-card">
                <h3><i class="fas fa-lightbulb"></i> Conseils</h3>
                <ul class="tips-list">
                    <li>Choisissez un titre clair et descriptif</li>
                    <li>Ajoutez une description détaillée</li>
                    <li>Utilisez un code unique facile à retenir</li>
                    <li>Organisez votre contenu en modules</li>
                </ul>
            </div>

            <div class="sidebar-card danger">
                <h3><i class="fas fa-exclamation-triangle"></i> Zone de danger</h3>
                <p class="danger-text">La suppression du cours est irréversible</p>
                <button type="button" class="btn-danger-action" onclick="document.getElementById('deleteModal').style.display='block'">
                    <i class="fas fa-trash"></i> Supprimer le cours
                </button>
            </div>
        </div>
    </div>

    <div id="deleteModal" class="delete-modal" style="display: none;">
        <div class="delete-modal-content">
            <div class="delete-modal-header">
                <h3><i class="fas fa-exclamation-triangle"></i> Confirmer la suppression</h3>
                <button onclick="document.getElementById('deleteModal').style.display='none'" class="close-modal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="delete-modal-body">
                <p>Êtes-vous sûr de vouloir supprimer le cours <strong>{{ course.title }}</strong> ?</p>
                <p class="warning-text">Cette action est irréversible et supprimera tous les modules et ressources associés.</p>
            </div>
            <div class="delete-modal-footer">
                <button onclick="document.getElementById('deleteModal').style.display='none'" class="btn-cancel">
                    Annuler
                </button>
                {{ include('course/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</main>
{% endblock %}
