{% extends 'base.html.twig' %}

{% block title %}Mes Modules{% endblock %}

{% block body %}
<main class="main-area">
    <div class="page-header-unified">
        <h1>Mes Modules</h1>
        
        <div class="search-wrapper-unified">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Rechercher un module..." id="moduleSearch">
        </div>
        
        <a href="{{ path('app_module_new') }}" class="btn-create-unified">
            <i class="fas fa-plus"></i> Créer Nouveau Module
        </a>
    </div>

    <div class="module-list">
        {% for module in modules %}
            <div class="module-card" data-module-title="{{ module.title|lower }}">
                <div class="module-order-badge">
                    <span>Module {{ module.orderIndex }}</span>
                </div>
                
                <div class="module-content">
                    <div class="module-icon">
                        <i class="fas fa-layer-group"></i>
                    </div>
                    
                    <div class="module-info">
                        <h3>{{ module.course ? module.course.title ~ ' - ' ~ module.title : module.title }}</h3>
                        <p class="module-course">
                            <i class="fas fa-book"></i>
                            {{ module.course ? module.course.title : 'Non assigné' }}
                        </p>
                        
                        <div class="module-meta">
                            <span class="meta-item">
                                <i class="fas fa-file-alt"></i>
                                {{ module.resources|length }} ressources
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-sort-numeric-up"></i>
                                Ordre: {{ module.orderIndex }}
                            </span>
                        </div>
                    </div>
                </div>
                
                <div class="module-actions">
                    <a href="{{ path('app_module_show', {'id': module.id}) }}" class="btn-module-action view">
                        <i class="fas fa-eye"></i> Voir
                    </a>
                </div>
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-layer-group"></i>
                </div>
                <h3>Aucun module disponible</h3>
                <p>Créez votre premier module pour organiser le contenu de vos cours.</p>
                <a href="{{ path('app_module_new') }}" class="btn-create-module">
                    <i class="fas fa-plus"></i> Créer mon premier module
                </a>
            </div>
        {% endfor %}
    </div>
</main>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('moduleSearch');
    if (searchInput) {
        searchInput.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const moduleCards = document.querySelectorAll('.module-card');
            
            moduleCards.forEach(card => {
                const title = card.getAttribute('data-module-title');
                if (title.includes(searchTerm)) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    }
});
</script>
{% endblock %}
