{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Gestion des Utilisateurs</h1>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Data Card -->
                <div class="card shadow mb-4 border-0">
                    <div class="card-header py-3 bg-white d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Modifier l'utilisateur</h6>
                        <a href="{{ path('app_user_index') }}" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>
                    <div class="card-body p-4">
                        {{ include('user/_form.html.twig', {'button_label': 'Mettre Ã  jour'}) }}
                        
                        <hr class="my-4">
                        
                        <div class="d-flex justify-content-between align-items-center">
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <span class="text-muted small">Zone de danger :</span>
                                {{ include('user/_delete_form.html.twig') }}
                            {% else %}
                                <span class="text-muted small"><i class="fas fa-lock"></i> Suppression restreinte au Directeur</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
