{% extends 'base.html.twig' %}

{% block title %}Gestion des Administrateurs{% endblock %}

{% block body %}
<main class="main-area">
    <div class="page-header-unified">
        <h1>Administrateurs</h1>
        
        <a href="{{ path('app_user_new') }}" class="btn-create-unified">
            <i class="fas fa-plus"></i> Créer Administrateur
        </a>
    </div>

    <div class="course-management-grid">
        {% for user in users %}
            <div class="course-manage-card">
                <div class="course-card-header">
                    <div class="course-icon-wrapper">
                        <i class="fas fa-user-shield"></i>
                    </div>
                </div>
                
                <h3>{{ user.prenom }} {{ user.nom }}</h3>
                
                <p class="course-description">
                    <i class="fas fa-envelope"></i> {{ user.email }}
                </p>
                
                <div class="course-stats">
                    <div class="stat-item">
                        <i class="fas fa-calendar-alt"></i>
                        <span>{{ user.createdAt|date('d/m/Y') }}</span>
                    </div>
                    <div class="stat-item">
                        {% if user.isIsActive %}
                            <i class="fas fa-check-circle" style="color: #10b981;"></i>
                            <span>Actif</span>
                        {% else %}
                            <i class="fas fa-times-circle" style="color: #ef4444;"></i>
                            <span>Inactif</span>
                        {% endif %}
                    </div>
                </div>
                
                <div class="course-card-actions">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn-card-action view">
                        <i class="fas fa-eye"></i> Voir
                    </a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn-card-action edit">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                </div>
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-user-shield"></i>
                </div>
                <h3>Aucun administrateur</h3>
                <p>Commencez par créer votre premier administrateur.</p>
                <a href="{{ path('app_user_new') }}" class="btn-create-course">
                    <i class="fas fa-plus"></i> Créer Administrateur
                </a>
            </div>
        {% endfor %}
    </div>
</main>
{% endblock %}
