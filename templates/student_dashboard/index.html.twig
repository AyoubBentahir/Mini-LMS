{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord Ã‰tudiant{% endblock %}

{% block body %}
    <main class="dashboard-content max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- V2 HERO SECTION: Resume Learning -->
        {% if resume_enrollment %}
            {% set r_course = resume_enrollment.course %}
            {% set title_lower = r_course.title|lower %}
             {# Smart Icon Detection Reuse #}
            {% if 'math' in title_lower %} {% set icon = 'calculator' %} {% set theme = 'blue' %}
            {% elseif 'code' in title_lower or 'dev' in title_lower or 'sym' in title_lower or 'php' in title_lower or 'java' in title_lower or 'c++' in title_lower or 'c#' in title_lower or 'python' in title_lower or 'sql' in title_lower or 'web' in title_lower or 'html' in title_lower or 'css' in title_lower or 'js' in title_lower %} {% set icon = 'code' %} {% set theme = 'indigo' %}
            {% elseif 'design' in title_lower or 'art' in title_lower or 'adobe' in title_lower %} {% set icon = 'palette' %} {% set theme = 'pink' %}
            {% elseif 'data' in title_lower or 'analy' in title_lower %} {% set icon = 'database' %} {% set theme = 'emerald' %}
            {% else %} {% set icon = 'book-open' %} {% set theme = 'violet' %}
            {% endif %}

            <div class="mb-10 relative overflow-hidden rounded-3xl bg-white border border-gray-100 shadow-xl">
                 <div class="absolute inset-0 bg-gradient-to-r from-{{ theme }}-600 to-{{ theme }}-800 opacity-95"></div>
                 <!-- Decorative Elements -->
                 <div class="absolute top-0 right-0 -mr-20 -mt-20 w-80 h-80 bg-white opacity-10 rounded-full blur-3xl"></div>
                 <div class="absolute bottom-0 left-0 -ml-20 -mb-20 w-64 h-64 bg-black opacity-10 rounded-full blur-3xl"></div>

                 <div class="relative z-10 p-8 md:p-10 flex flex-col md:flex-row items-center justify-between gap-8">
                    <div class="flex-1 text-center md:text-left text-white">
                        <div class="inline-flex items-center space-x-2 bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-semibold tracking-wider mb-4 border border-white/10 uppercase">
                             <span class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></span>
                             <span>Reprendre l'apprentissage</span>
                        </div>
                        <h1 class="text-3xl md:text-4xl font-bold mb-4 leading-tight">{{ r_course.title }}</h1>
                        <p class="text-{{ theme }}-100 mb-6 text-lg max-w-2xl line-clamp-2 opacity-90">{{ r_course.description }}</p>
                        
                        <div class="flex items-center justify-center md:justify-start gap-4">
                            <a href="{{ path('app_student_course_view', {'id': r_course.id}) }}" class="px-8 py-3.5 bg-white text-{{ theme }}-700 rounded-xl font-bold shadow-lg hover:bg-gray-50 hover:scale-105 transition-all flex items-center group">
                                <i class="fas fa-play mr-2 group-hover:animate-pulse"></i> Continuer le cours
                            </a>

                        </div>
                    </div>

                    <!-- Icon / Visual -->
                    <div class="hidden md:flex flex-shrink-0 w-48 h-48 bg-white/10 rounded-full backdrop-blur-sm items-center justify-center border-4 border-white/20 shadow-2xl relative">
                        <i class="fas fa-{{ icon }} text-7xl text-white drop-shadow-lg"></i>
                        <div class="absolute bottom-4 right-4 bg-white text-{{ theme }}-600 text-xs font-bold px-3 py-1 rounded-lg shadow-sm">
                            {{ r_course.category|default('CODE') }}
                        </div>
                    </div>
                 </div>
            </div>
        {% else %}
             <!-- Welcome Banner as Fallback -->
            <header class="dashboard-header mb-8">
                <div class="welcome-banner p-10 bg-gradient-to-r from-gray-800 to-gray-900 rounded-3xl text-white shadow-lg relative overflow-hidden">
                    <div class="relative z-10 text-center md:text-left">
                        <h1 class="text-3xl font-bold mb-2">Bonjour, {{ app.user.prenom }} ðŸ‘‹</h1>
                        <p class="text-gray-300">PrÃªt Ã  commencer votre voyage d'apprentissage ?</p>

                    </div>
                </div>
            </header>
        {% endif %}



        <!-- RECENT COURSES GRID -->
        <section>
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-bold text-gray-900 flex items-center">
                    <i class="fas fa-history mr-2 text-indigo-500"></i> Reprendre rÃ©cemment
                </h2>
                <a href="{{ path('app_student_my_courses') }}" class="text-sm font-semibold text-indigo-600 hover:text-indigo-800 transition-colors bg-indigo-50 px-3 py-1 rounded-lg">
                    Voir tout
                </a>
            </div>

            {% if recent_enrollments|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for enrollment in recent_enrollments %}
                        {% set course = enrollment.course %}
                         {% set title_lower = course.title|lower %}
                        
                        {# Smart Icon Detection #}
                        {% if 'math' in title_lower %} {% set icon = 'calculator' %} {% set badge_color = 'blue' %}
                        {% elseif 'code' in title_lower or 'dev' in title_lower or 'sym' in title_lower or 'php' in title_lower or 'java' in title_lower or 'c++' in title_lower or 'c#' in title_lower or 'python' in title_lower or 'sql' in title_lower or 'web' in title_lower or 'html' in title_lower or 'css' in title_lower or 'js' in title_lower %} {% set icon = 'code' %} {% set badge_color = 'indigo' %}
                        {% elseif 'design' in title_lower or 'art' in title_lower or 'adobe' in title_lower %} {% set icon = 'palette' %} {% set badge_color = 'pink' %}
                        {% elseif 'data' in title_lower or 'analy' in title_lower %} {% set icon = 'database' %} {% set badge_color = 'emerald' %}
                        {% else %} {% set icon = 'book-open' %} {% set badge_color = 'violet' %}
                        {% endif %}

                         <article class="course-card bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-xl transition-all duration-300 group flex flex-col h-full transform hover:-translate-y-1">
                            <div class="h-44 bg-gradient-to-br from-{{ badge_color }}-50 to-white relative flex items-center justify-center overflow-hidden">
                                <div class="absolute w-64 h-64 bg-{{ badge_color }}-100/50 rounded-full blur-3xl -top-10 -right-10 group-hover:bg-{{ badge_color }}-200/50 transition-colors duration-500"></div>
                                <i class="fas fa-{{ icon }} text-7xl text-{{ badge_color }}-300 group-hover:text-{{ badge_color }}-400 transition-colors transform group-hover:scale-110 duration-500 relative z-10 drop-shadow-sm"></i>
                                <div class="absolute top-4 right-4 z-20">
                                    <span class="px-3 py-1 bg-white/90 backdrop-blur-md text-{{ badge_color }}-600 text-xs font-bold rounded-full uppercase tracking-wide shadow-sm border border-{{ badge_color }}-100">
                                        {{ course.category|default('Cours') }}
                                    </span>
                                </div>
                            </div>
                            
                            <div class="p-5 flex-1 flex flex-col">
                                <h3 class="font-bold text-gray-900 mb-1 group-hover:text-indigo-600 transition-colors truncate">
                                    <a href="{{ path('app_student_course_view', {'id': course.id}) }}">
                                        {{ course.title }}
                                    </a>
                                </h3>
                                <p class="text-xs text-gray-500 mb-4 line-clamp-1">Par {{ course.teacher.prenom }} {{ course.teacher.nom }}</p>
                                
                                <div class="mt-auto pt-4 border-t border-gray-50 flex items-center justify-between">
                                     <span class="text-xs font-medium text-gray-400">Inscrit le {{ enrollment.enrolledAt|date('d/m/Y') }}</span>
                                     <a href="{{ path('app_student_course_view', {'id': course.id}) }}" class="text-sm font-bold text-{{ badge_color }}-600 hover:underline">
                                        AccÃ©der <i class="fas fa-arrow-right ml-1"></i>
                                     </a>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            {% else %}
               <!-- Empty State reusing the one from above but simpler -->
               <div class="text-center py-10 bg-gray-50 rounded-2xl border-2 border-dashed border-gray-200">
                    <p class="text-gray-500">Vous n'avez pas encore consultÃ© de cours rÃ©cemment.</p>
               </div>
            {% endif %}
        </section>
    </main>
{% endblock %}
